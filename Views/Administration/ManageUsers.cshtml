@{
    var count = 0;
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Email</td>
            <td>User permissions</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.joined_users)
        {
        <tr>
            <td>@user.email</td>
            @if (user.role == "Admin")
            {
                <td>
                    <form id="submit+@count" asp-controller="Administration" asp-action="EditUserRole"  asp-route-id="@user.id" method="post">
                        <select id="select+@count" onchange="RouteRole(this)">
                            <option value="">Guest</option>
                            <option value="Researcher">Researcher</option>
                            <option value="Admin" selected>Admin</option>
                        </select>
                        <button type="submit" class="btn btn-dark">Save changes</button>
                    </form>
                </td>
            }else if (user.role == "Researcher")
            {
                <td>
                    <form id="submit+@count" asp-controller="Administration" asp-action="EditUserRole"  asp-route-id="@user.id" method="post">
                        <select id="select+@count" onchange="RouteRole(this)">
                            <option value="">Guest</option>
                            <option value="Researcher" selected>Researcher</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <button type="submit" class="btn btn-dark">Save changes</button>
                    </form>
                </td>
            }else 
            {
                <td>
                    <form id="submit+@count" asp-controller="Administration" asp-action="EditUserRole"  asp-route-id="@user.id" method="post">
                        <select id="select+@count" onchange="RouteRole(this)">
                            <option value="" selected>Guest</option>
                            <option value="Researcher">Researcher</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <button type="submit" class="btn btn-dark">Save changes</button>
                    </form>
                </td>
            }


            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.id" method="post">
                    <button type="submit" class="btn btn-danger">Delete user</button>
                </form>
            </td>
        </tr>

            count++;

        }

    </tbody>
</table>

<script>

    function RouteRole(id)
    {
        alert(id.id);
        var route_id = "submit+" + id.id.substring(7, 8);
        alert(route_id)

        var e = document.getElementById(id.id);
        var selected = e.options[e.selectedIndex].value;
        alert(selected);

        document.getElementById(route_id).setAttribute("asp-route-role", selected);
    }

</script>


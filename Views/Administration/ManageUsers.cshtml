@{
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>User Id</td>
            <td>Email</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete user</button>
                    </form>
                
                </td>
            </tr>

        }
    </tbody>
</table>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>User Id</td>
            <td>Role</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in ViewBag.user_roles)
        {
            <tr>
                <td>@role.UserId</td>
                <td>@role.RoleId</td>
            </tr>

        }
    </tbody>
</table>

